def unimodal(a):
  mid=len(a)/2
  if a[mid]>a[mid-1] and a[mid+1]>a[mid+2]: #Peak value condition
    return a[mid]
  elif a[mid]>a[mid-1]:    #Peak element present at left side of the middle element
    return unimodal(a[mid+1:])
  else:                    #Peak element present at right side of the middle element
    return unimodal(a[:mid])
if __name__=="__main__":
  a=[1,2,3,6,4,2,1]
  print unimodal(a)